  <!--
    Navigate from Symbols:
    We reserve the G key for the most important goto actions

    C-G: Goto declaration (or usages)
    A-G: Goto type decl
    S-C-G: Navigate yo anything (Rider specific)
    C-A-G: Goto impl
    S-A-G: Goto usages (via dropdown)
  -->

  <!-- Go to Declaration or Usages (Declaration) -->
  <action id="GotoDeclaration">
    <keyboard-shortcut first-keystroke="control G"/>
  </action>
  <!-- Go to Type Declaration (Type of Symbol) -->
  <action id="GotoTypeDeclaration">
    <keyboard-shortcut first-keystroke="shift alt G"/>
  </action>
  <!-- Go to Super Method (Base Symbols) -->
  <action id="GotoSuperMethod">
    <keyboard-shortcut first-keystroke="shift alt B"/>
  </action>

  <!-- Go to Implementation(s) (Derived Symbols) -->
  <action id="GotoImplementation">
    <keyboard-shortcut first-keystroke="shift alt D"/>
  </action>

  <action id="GotoRelated">
    <keyboard-shortcut first-keystroke="shift alt R"/>
  </action>

  <action id="GotoTest">
    <keyboard-shortcut first-keystroke="shift alt T"/>
  </action>

  <!-- Show Usages (opens drop down) -->
  <action id="ShowUsages">
    <keyboard-shortcut first-keystroke="shift alt U"/>
    <keyboard-shortcut first-keystroke="control alt F7"/>
  </action>
  <!-- Find Usages (opens tool window) -->
  <action id="FindUsages">
    <keyboard-shortcut first-keystroke="alt f7"/>
  </action>
  <!-- Find Usages in File (will highlight all usages) -->
  <action id="FindUsagesInFile">
    <!-- TODO: Maybe make it Ctrl+F7 -->
    <keyboard-shortcut first-keystroke="shift control F7"/>
  </action>
  <!-- Highlight Usages in File -->
  <action id="HighlightUsagesInFile">
    <keyboard-shortcut first-keystroke="shift control F7"/>
  </action>

  <action id="ShowSettingsAndFindUsages">
    <keyboard-shortcut first-keystroke="shift control alt F7"/>
    <keyboard-shortcut first-keystroke="shift alt F7"/>
  </action>
