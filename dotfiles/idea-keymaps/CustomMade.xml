<keymap name="CustomMade" parent="$default" version="1" disable-mnemonics="false">

  <!--
    Things we don't want to use, and the shortcuts are used with other commands
  -->

  <!-- shift+alt+enter used to toogle full screen-->
  <action id="AddToFavoritesPopup"/>
  <!-- shift+alt+N used to show NuGet Quick List -->
  <action id="tasks.goto"/>
  <!-- shift+alt+L used by show in solution explorer -->
  <action id="context.load"/>

  <!-- Quick scheme changing -->
  <action id="QuickChangeScheme">
    <keyboard-shortcut first-keystroke="control COMMA"/>
    <keyboard-shortcut first-keystroke="control alt COMMA"/>
  </action>
  <!-- Quick keymap changing -->
  <action id="ChangeKeymap">
    <keyboard-shortcut first-keystroke="control SEMICOLON"/>
    <keyboard-shortcut first-keystroke="control alt SEMICOLON"/>
  </action>

  <!--
    Editor settings (Ctrl+E <second-key> namespace)
  -->

  <action id="EditorToggleShowWhitespaces">
    <keyboard-shortcut first-keystroke="control E" second-keystroke="W"/>
    <keyboard-shortcut first-keystroke="control E" second-keystroke="control W"/>
  </action>
  <action id="EditorToggleUseSoftWraps">
    <keyboard-shortcut first-keystroke="control E" second-keystroke="S"/>
    <keyboard-shortcut first-keystroke="control E" second-keystroke="control S"/>
  </action>

  <action id="ToggleFullScreen">
    <keyboard-shortcut first-keystroke="shift alt ENTER"/>
    <keyboard-shortcut first-keystroke="control E" second-keystroke="F"/>
    <keyboard-shortcut first-keystroke="control E" second-keystroke="control F"/>
  </action>
  <action id="ToggleDistractionFreeMode">
    <keyboard-shortcut first-keystroke="control E" second-keystroke="D"/>
    <keyboard-shortcut first-keystroke="control E" second-keystroke="control D"/>
  </action>
  <action id="TogglePresentationMode">
    <keyboard-shortcut first-keystroke="control E" second-keystroke="P"/>
    <keyboard-shortcut first-keystroke="control E" second-keystroke="control P"/>
  </action>


  <!-- navigate groups in search everywhere-->
  <action id="SearchEverywhere.NavigateToNextGroup">
    <keyboard-shortcut first-keystroke="PAGE_DOWN"/>
  </action>
  <action id="SearchEverywhere.NavigateToPrevGroup">
    <keyboard-shortcut first-keystroke="PAGE_UP"/>
  </action>

  <!-- extend/shrink selection -->
  <action id="EditorSelectWord">
    <keyboard-shortcut first-keystroke="control UP"/>
  </action>
  <action id="EditorUnSelectWord">
    <keyboard-shortcut first-keystroke="control DOWN"/>
  </action>

  <!--Open/Close editors  -->
  <action id="CloseActiveTab">
    <keyboard-shortcut first-keystroke="control shift F4"/>
  </action>
  <action id="CloseContent">
    <keyboard-shortcut first-keystroke="control F4"/>
    <keyboard-shortcut first-keystroke="control W"/>
  </action>
  <action id="EditSource">
    <keyboard-shortcut first-keystroke="F4"/>
  </action>
  <action id="EditSourceInNewWindow">
    <keyboard-shortcut first-keystroke="shift F4"/>
  </action>

  <!-- Move focus to editor without hiding tool window -->
  <action id="FocusEditor">
    <keyboard-shortcut first-keystroke="ESCAPE"/>
    <keyboard-shortcut first-keystroke="control BACK_QUOTE"/>
  </action>
  <!-- Move focus from editor to last tool window -->
  <action id="JumpToLastWindow">
    <keyboard-shortcut first-keystroke="F12"/>
    <keyboard-shortcut first-keystroke="control BACK_QUOTE"/>
  </action>
  <!-- Move focus to the editor and hiding tool window -->
  <action id="HideActiveWindow">
    <keyboard-shortcut first-keystroke="shift ESCAPE"/>
  </action>
  <!-- Hide all tool windows -->
  <action id="HideAllWindows">
    <keyboard-shortcut first-keystroke="shift control ESCAPE"/>
    <keyboard-shortcut first-keystroke="shift control F12"/>
  </action>

  <action id="FileStructurePopup">
    <keyboard-shortcut first-keystroke="control F12"/>
  </action>
  <action id="ShowFilePath">
    <keyboard-shortcut first-keystroke="control alt F12"/>
  </action>

  <action id="RestoreDefaultLayout">
    <keyboard-shortcut first-keystroke="shift control alt F12"/>
  </action>

  <!-- Other tool windows -->
  <action id="ActivateTerminalToolWindow">
    <keyboard-shortcut first-keystroke="control alt 1"/>
    <keyboard-shortcut first-keystroke="alt T"/>
  </action>
  <action id="ActivateErrorsInSolutionToolWindow">
    <keyboard-shortcut first-keystroke="control alt 2"/>
    <keyboard-shortcut first-keystroke="alt R"/>
  </action>
  <action id="ActivateDatabaseToolWindow">
    <keyboard-shortcut first-keystroke="control alt 3"/>
    <keyboard-shortcut first-keystroke="alt D"/>
  </action>
  <action id="ActivateInspectionResultsToolWindow">
    <keyboard-shortcut first-keystroke="control alt 4"/>
    <keyboard-shortcut first-keystroke="alt I"/>
  </action>
  <action id="ActivateCommitToolWindow">
    <keyboard-shortcut first-keystroke="Alt C"/>
  </action>
  <action id="ActivateServicesToolWindow"/>
  <action id="ActivateWebToolWindow">
    <keyboard-shortcut first-keystroke="alt W"/>
  </action>
  <action id="ActivateStructureToolWindow">
    <keyboard-shortcut first-keystroke="alt S"/>
  </action>
  <action id="ActivateHierarchyToolWindow"/>

  <!-- Tool windows: Alt-{1,2,3,4,5,6,7,8,9,0} -->
  <action id="ActivateProjectToolWindow">
    <keyboard-shortcut first-keystroke="alt 1"/>
  </action>
  <action id="ActivateFavoritesToolWindow">
    <keyboard-shortcut first-keystroke="alt 2"/>
  </action>
  <action id="ActivateFindToolWindow">
    <keyboard-shortcut first-keystroke="alt 3"/>
  </action>
  <action id="ActivateRunToolWindow">
    <keyboard-shortcut first-keystroke="alt 4"/>
  </action>
  <action id="ActivateDebugToolWindow">
    <keyboard-shortcut first-keystroke="alt 5"/>
  </action>
  <action id="ActivateTODOToolWindow">
    <keyboard-shortcut first-keystroke="alt 6"/>
  </action>
  <action id="ActivateNuGetToolWindow">
    <keyboard-shortcut first-keystroke="alt 7"/>
  </action>
  <action id="ActivateUnitTestsToolWindow">
    <keyboard-shortcut first-keystroke="alt 8"/>
  </action>
  <action id="ActivateVersionControlToolWindow">
    <keyboard-shortcut first-keystroke="alt 9"/>
  </action>
  <action id="ActivateBuildToolWindow">
    <keyboard-shortcut first-keystroke="alt 0"/>
  </action>

  <!-- Tool window resizing -->
  <action id="ResizeToolWindowLeft">
    <keyboard-shortcut first-keystroke="control shift LEFT"/>
  </action>
  <action id="ResizeToolWindowRight">
    <keyboard-shortcut first-keystroke="control shift RIGHT"/>
  </action>
  <action id="ResizeToolWindowUp">
    <keyboard-shortcut first-keystroke="control shift UP"/>
  </action>
  <action id="ResizeToolWindowDown">
    <keyboard-shortcut first-keystroke="control shift DOWN"/>
  </action>
  <action id="MaximizeToolWindow">
    <keyboard-shortcut first-keystroke="control shift QUOTE"/>
  </action>

  <!-- Navigate files -->
  <action id="RecentFiles">
    <keyboard-shortcut first-keystroke="control E"/>
  </action>
  <action id="RecentLocations">
    <keyboard-shortcut first-keystroke="control shift E"/>
  </action>
  <action id="GotoFile">
    <keyboard-shortcut first-keystroke="control shift N"/>
  </action>

  <!-- Resharper bindings -->
  <action id="GotoAction">
    <keyboard-shortcut first-keystroke="control shift A"/>
  </action>
  <action id="GotoClass">
    <keyboard-shortcut first-keystroke="control N"/>
  </action>
  <action id="GotoSymbol">
    <keyboard-shortcut first-keystroke="control shift alt N"/>
  </action>


  <!-- Shift+Ctrl+{Up,Right,Down,Left} will resize a tool window in $default -->

  <!-- Shift+Ctrl+{Up,Down} move statements up and down in the editor in $default-->

  <action id="ShowNavBar">
    <keyboard-shortcut first-keystroke="alt H"/>
    <!-- Macbook has HOME == Fn Left -->
    <keyboard-shortcut first-keystroke="alt HOME"/>
  </action>

  <!-- Maybe we should not redefine Ctrl+Alt+{Left,Right} bindings -->
  <action id="Back">
    <keyboard-shortcut first-keystroke="alt LEFT"/>
  </action>
  <action id="Forward">
    <keyboard-shortcut first-keystroke="alt RIGHT"/>
  </action>

  <!--Remove all Alt+Left and Alt+Right bindings -->
  <!--This is an example to show that we can remove bindings
      BUT maybe we should -->
  <action id="PreviousTab">
  </action>
  <action id="PreviousEditorTab">
  </action>
  <action id="Diff.PrevChange">
  </action>

  <action id="NextTab">
  </action>
  <action id="NextEditorTab">
  </action>
  <action id="Diff.NextChange">
  </action>

  <!-- Ctrl+{Up,Down} in $default (we use VIM keys to scroll) -->
  <action id="EditorScrollUp">
  </action>
  <action id="EditorScrollDown">
  </action>

  <!-- Ctrl+{Up,Down} in $default -->
  <action id="EditorLookupUp"></action>
  <action id="EditorLookupDown"></action>

  <!-- <action id="MethodOverloadSwitchUp"><keyboard-shortcut first-keystroke="control UP"/></action>
  <action id="MethodOverloadSwitchDown"><keyboard-shortcut first-keystroke="control DOWN"/></action> -->


  <!-- Resharper specific actions -->

  <!--  Rider-specific actions-->

  <!-- alt 8 be default (rider will override this action) -->
  <action id="ActivateServicesToolWindow"/>

  <action id="ActivateInspectionResultsToolWindow">
    <keyboard-shortcut first-keystroke="control alt 4"/>
    <keyboard-shortcut first-keystroke="control alt V"/>
  </action>
  <action id="ActivateErrorsInSolutionToolWindow">
    <keyboard-shortcut first-keystroke="control alt 2"/>
  </action>

  <action id="ActivateBuildToolWindow">
    <keyboard-shortcut first-keystroke="alt 0"/>
  </action>
  <action id="ActivateNuGetToolWindow">
    <keyboard-shortcut first-keystroke="alt 7"/>
  </action>
  <action id="ActivateUnitTestsToolWindow">
    <keyboard-shortcut first-keystroke="alt 8"/>
  </action>

  <action id="RiderNuGetQuickListPopupAction">
    <keyboard-shortcut first-keystroke="shift alt N"/>
  </action>

  <!-- Build+Run+Debug commands -->
  <action id="BuildSolutionAction">
    <keyboard-shortcut first-keystroke="control B"/>
  </action>
  <action id="RebuildSolutionAction">
    <keyboard-shortcut first-keystroke="shift control B"/>
  </action>

  <action id="Run">
    <keyboard-shortcut first-keystroke="control F5"/>
  </action>
  <action id="Debug">
    <keyboard-shortcut first-keystroke="alt F5"/>
  </action>

  <action id="RunClass">
    <keyboard-shortcut first-keystroke="control F5"/>
  </action>
  <action id="Rerun">
    <keyboard-shortcut first-keystroke="control shift F5"/>
  </action>

  <!-- debugging actions -->
  <action id="Stop">
    <keyboard-shortcut first-keystroke="shift F5"/>
  </action>
  <action id="Resume">
    <keyboard-shortcut first-keystroke="F5"/>
  </action>
  <action id="StepOut">
    <keyboard-shortcut first-keystroke="shift F11"/>
  </action>
  <action id="StepInto">
    <keyboard-shortcut first-keystroke="F11"/>
  </action>
  <action id="ForceStepInto">
    <keyboard-shortcut first-keystroke="alt F11"/>
  </action>
  <action id="StepOver">
    <keyboard-shortcut first-keystroke="F10"/>
  </action>
  <action id="RunToCursor">
    <keyboard-shortcut first-keystroke="control F10"/>
  </action>

  <action id="EvaluateExpression">
    <keyboard-shortcut first-keystroke="shift F9"/>
  </action>
  <action id="QuickEvaluateExpression">
    <keyboard-shortcut first-keystroke="control alt F8"/>
  </action>
  <action id="ShowExecutionPoint">
    <keyboard-shortcut first-keystroke="alt F10"/>
  </action>


  <!-- Breakpoints -->
  <action id="ToggleLineBreakpoint">
    <keyboard-shortcut first-keystroke="F9"/>
  </action>
  <action id="ToggleBreakpointEnabled">
    <keyboard-shortcut first-keystroke="control F9"/>
  </action>
  <action id="ViewBreakpoints">
    <keyboard-shortcut first-keystroke="control alt B"/>
  </action>
  <action id="EditBreakpoint">
    <keyboard-shortcut first-keystroke="alt F9"/>
  </action>

  <!--
    Unit Testing
  -->

  <action id="RiderUnitTestQuickListPopupAction">
    <keyboard-shortcut first-keystroke="shift alt U"/>
  </action>
  <!-- Focus Unit Test Explorer -->
  <action id="RiderUnitTestFocusExplorerAction">
    <keyboard-shortcut first-keystroke="control alt U"/>
  </action>

  <!-- Run Unit Tests -->
  <action id="RiderUnitTestRunContextAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="R" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control R" />
  </action>
  <!-- Debug Unit Tests -->
  <action id="RiderUnitTestDebugContextAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="D" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control D" />
  </action>
  <!-- Run Tests Until Failure -->
  <action id="RiderUnitTestRunContextUntilFailAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="W" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control W" />
  </action>
  <!-- Stop execution -->
  <action id="RiderUnitTestSessionAbortAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="S" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control S" />
  </action>
  <!-- Repeat Previous Run -->
  <action id="RiderUnitTestRepeatPreviousRunAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="T" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control T" />
  </action>
  <!-- Rerun Failed Tests -->
  <action id="RiderUnitTestSessionRerunFailedTestsAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="F" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control F" />
  </action>
  <!-- Run all tests from solution -->
  <action id="RiderUnitTestRunSolutionAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="L" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control L" />
  </action>

  <!-- Run Unit Tests under dotMemory Unit -->
  <action id="RiderUnitTestDotMemoryUnitContextAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="M" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control M" />
  </action>
  <!-- Run All Tests from Solution under dotMemory Unit -->
  <action id="RiderUnitTestDotMemoryUnitSolutionAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="E" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control E" />
  </action>

  <!-- Create New Session -->
  <action id="RiderUnitTestNewSessionAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="N" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control N" />
  </action>
  <!-- Append Tests to Session -->
  <action id="RiderUnitTestAppendTestsAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="A" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control A" />
  </action>
  <!-- Run Current Session -->
  <action id="RiderUnitTestRunCurrentSessionAction">
    <keyboard-shortcut first-keystroke="control T" second-keystroke="Y" />
    <keyboard-shortcut first-keystroke="control T" second-keystroke="control Y" />
  </action>

</keymap>
